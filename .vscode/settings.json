{
    "pylint.args": [
        "--max-line-length=120",
        "--disable=missing-class-docstring,missing-module-docstring,broad-except",
        "--generated-members=application.logger"
    ],
    "mypy-type-checker.preferDaemon": true,
    "mypy-type-checker.args": [
        "--show-column-numbers",
        "--no-pretty",
        "--disallow-untyped-signatures"
    ],
    "mypy-type-checker.reportingScope": "workspace"
}
